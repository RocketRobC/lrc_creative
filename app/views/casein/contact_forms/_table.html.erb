<!-- Scaffolding generated by Casein v5.1.1.5 -->

<table class="table table-striped table-hover table-condensed">
	<thead>
		<tr>
			<th><%= casein_sort_link "First name", :first_name %></th>
			<th><%= casein_sort_link "Last name", :last_name %></th>
			<th><%= casein_sort_link "Business name", :business_name %></th>
			<th><%= casein_sort_link "Email", :email %></th>
			<th><%= casein_sort_link "Phone", :phone %></th>
			<th><%= casein_sort_link "Details", :details %></th>
			<th>&nbsp;</th>
		</tr>
	</thead>
	
	<% contact_forms.each do |contact_form| %>
		<tr>
			<td><%= casein_table_cell_link contact_form.first_name, casein_contact_form_path(contact_form) %></td>
			<td><%= casein_table_cell_link contact_form.last_name, casein_contact_form_path(contact_form) %></td>
			<td><%= casein_table_cell_link contact_form.business_name, casein_contact_form_path(contact_form) %></td>
			<td><%= casein_table_cell_link contact_form.email, casein_contact_form_path(contact_form) %></td>
			<td><%= casein_table_cell_link contact_form.phone, casein_contact_form_path(contact_form) %></td>
			<td><%= casein_table_cell_link contact_form.details, casein_contact_form_path(contact_form) %></td>
			<td class="delete">
				<%= link_to(casein_show_row_icon("trash"), casein_contact_form_path(contact_form), :method => :delete, :data => { :confirm => "Are you sure you want to delete this contact form?" }) %>
			</td>
		</tr>
	<% end %>
</table>