<h5>Contact Us. We're listening!</h5>

<%= form_for @contact_form do |f| %>
  <% if @contact_form.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@contact_form.errors.count, "error") %> prohibited this contact_form from being saved:</h2>

      <ul>
      <% @contact_form.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="row">
    <div class="column">
      <div class="field">
        <%= f.label "First Name*" %>
        <%= f.text_field :first_name, required: true %>
      </div>
    </div>
    <div class="column">
      <div class="field">
        <%= f.label :last_name %>
        <%= f.text_field :last_name %>
      </div>
    </div>
    <div class="column">
      <div class="field">
        <%= f.label :business_name %>
        <%= f.text_field :business_name %>
      </div>
    </div>
  </div> <!-- Row -->
  <div class="row">
    <div class="column">
      <div class="field">
        <%= f.label "Email*" %>
        <%= f.text_field :email, required: true %>
      </div>
    </div>
    <div class="column">
      <div class="field">
        <%= f.label :phone %>
        <%= f.text_field :phone %>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="column">
      <div class="field">
        <%= f.label :details %>
        <%= f.text_area :details %>
      </div>
    </div>
  </div>
  <div class="actions">
    <%= f.submit "Send!" %>
  </div>
<% end %>
